<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CAPITAL STEEZ</title>

  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>BEAST COAST</h1>



<h5>REST IN PEACE CAPITAL STEEZ</h5>
<h3>Post</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <!-- <span><%= messages[i].thumbUp %></span>
      <span><%= messages[i].thumbDown %></span> -->
      <span><%= messages[i].total %></span>
      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2 class="formSubmit">Submit Lyrics</h2>

  <form action="/messages" method="POST">
    <input type="text" placeholder="Type your name..." name="name">
    <input type="text" placeholder="Type your favorite lyric..." name="msg">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
